<% for(var i = 0; i < users.length; i++) { %>
<tr>
    <td><%= i + 1 %></td>
    <td><%= users[i].name %></td>
    <td><%= users[i].age %></td>
    <td><%= users[i].gender %></td>
    <td><%= users[i].telephone %></td>
    <td><span class="<%= users[i].status === 'Active' ? 'active' : 'inactive' %>"><%= users[i].status %></span></td>
    <td>
        <a href="/update-user?id=<%= users[i]._id%>" class="btn update">
            <span class="text-gradient"><i class="fas fa-pencil-alt"></i></span>
        </a>
        <a class="btn delete" data-id=<%= users[i]._id%> >
            <span class="text-gradient"><i class="fas fa-trash"></i></span>
        </a>
    </td>
</tr>
<% } %>